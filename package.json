{
  "name": "@anchan828/template-packages",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "postinstall": "npm run bootstrap && npm run build",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "compodoc": "compodoc -c .compodocrc.json",
    "format": "prettier --write '**/*.{js,json,yml,yaml,md}'",
    "lint": "eslint --ignore-pattern packages '**/*.ts' && lerna run --parallel lint",
    "lint:fix": "eslint --ignore-pattern packages --fix '**/*.ts' && lerna run --parallel lint:fix",
    "publish": "lerna publish --yes patch",
    "publish:minor": "lerna publish --yes minor",
    "publish:major": "lerna publish --yes major",
    "test": "lerna run test",
    "new": "ts-node scripts/new-package.ts",
    "postnew": "ts-node scripts/generate-vs-launch.ts",
    "watch": "lerna run --parallel watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anchan828/nest-lerna-template.git"
  },
  "author": "anchan828 <anchan828@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anchan828/nest-lerna-template/issues"
  },
  "homepage": "https://github.com/anchan828/nest-lerna-template",
  "devDependencies": {
    "@commitlint/cli": "8.3.4",
    "@commitlint/config-conventional": "8.3.4",
    "@commitlint/config-lerna-scopes": "8.3.4",
    "@compodoc/compodoc": "1.1.11",
    "@nestjs/common": "6.10.14",
    "@nestjs/core": "6.10.14",
    "@nestjs/platform-express": "6.10.14",
    "@nestjs/testing": "6.10.14",
    "@types/glob": "7.1.1",
    "@types/jest": "24.0.25",
    "@types/node": "11.15.4",
    "@types/prettier": "1.19.0",
    "@types/rimraf": "2.0.3",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "2.15.0",
    "@typescript-eslint/parser": "2.15.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-sort-keys-fix": "1.1.0",
    "glob": "7.1.6",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lerna": "3.20.2",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.0",
    "supertest": "4.0.2",
    "ts-jest": "24.3.0",
    "ts-node": "8.6.1",
    "typescript": "3.7.4"
  }
}
