{
  "name": "@anchan828/template-packages",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "postinstall": "npm run bootstrap && npm run build",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "compodoc": "compodoc -c .compodocrc.json",
    "format": "prettier --write '**/*.{js,json,yml,yaml,md}'",
    "lint": "eslint --ignore-pattern packages '**/*.ts' && lerna run --parallel lint",
    "lint:fix": "eslint --ignore-pattern packages --fix '**/*.ts' && lerna run --parallel lint:fix",
    "publish": "lerna publish --yes patch",
    "publish:minor": "lerna publish --yes minor",
    "publish:major": "lerna publish --yes major",
    "test": "lerna run test && ts-node scripts/merge-coverage.ts",
    "new": "ts-node scripts/new-package.ts",
    "postnew": "ts-node scripts/generate-vs-launch.ts",
    "watch": "lerna run --parallel watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anchan828/nest-lerna-template.git"
  },
  "author": "anchan828 <anchan828@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anchan828/nest-lerna-template/issues"
  },
  "homepage": "https://github.com/anchan828/nest-lerna-template",
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@commitlint/config-lerna-scopes": "11.0.0",
    "@compodoc/compodoc": "1.1.11",
    "@nestjs/common": "7.6.13",
    "@nestjs/core": "7.6.13",
    "@nestjs/platform-express": "7.6.13",
    "@nestjs/testing": "7.6.13",
    "@types/glob": "7.1.3",
    "@types/jest": "26.0.20",
    "@types/node": "11.15.47",
    "@types/prettier": "2.2.1",
    "@types/rimraf": "3.0.0",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "eslint": "7.20.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-sort-keys-fix": "1.1.1",
    "glob": "7.1.6",
    "husky": "5.1.1",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "supertest": "6.1.3",
    "ts-jest": "26.5.1",
    "ts-node": "9.1.1",
    "typescript": "4.1.5"
  }
}
